# ==================== SERVER CONFIGURATION ====================
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# ==================== FIREBASE CONFIGURATION ====================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# ==================== CORS CONFIGURATION ====================
ALLOWED_ORIGINS=https://serenyx.com,https://www.serenyx.com,https://app.serenyx.com,https://serenyx-app.vercel.app,https://serenyx-app.netlify.app,capacitor://localhost,ionic://localhost

# ==================== ELEVENLABS CONFIGURATION ====================
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# ==================== SECURITY CONFIGURATION ====================
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# ==================== RATE LIMITING ====================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SPEED_LIMIT_DELAY_AFTER=50
SPEED_LIMIT_DELAY_MS=500

# ==================== FILE UPLOAD CONFIGURATION ====================
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_AUDIO_TYPES=mp3,wav,m4a,aac

# ==================== CACHE CONFIGURATION ====================
CACHE_EXPIRATION_MINUTES=5
MAX_CACHE_SIZE=52428800

# ==================== MONITORING CONFIGURATION ====================
ENABLE_METRICS=true
METRICS_PORT=9090

# ==================== RENDER SPECIFIC ====================
# These are automatically set by Render
# RENDER=true
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
# RENDER_INSTANCE_ID=your-instance-id

# ==================== DATABASE CONFIGURATION ====================
# For future database integrations
# DATABASE_URL=your-database-url
# REDIS_URL=your-redis-url

# ==================== EMAIL CONFIGURATION ====================
# For future email features
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ==================== ANALYTICS CONFIGURATION ====================
# For future analytics
# GOOGLE_ANALYTICS_ID=your-ga-id
# MIXPANEL_TOKEN=your-mixpanel-token

# ==================== PAYMENT CONFIGURATION ====================
